<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #658354;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.RankSceneController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="700.0" prefWidth="900.0" spacing="5.0">
         <children>
            <Label text="2048" textFill="#ddead1">
               <font>
                  <Font name="System Bold" size="64.0" />
               </font>
            </Label>
            <Label text="Score Board" textFill="#ddead1">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Label>
            <TableView fx:id="scoreTable" prefHeight="328.0" prefWidth="300.0">
              <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="185.0" sortable="false" text="Username" />
                <TableColumn fx:id="scoreColumn" minWidth="0.0" prefWidth="113.0" sortType="DESCENDING" text="Score" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="275.0" spacing="10.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonOnAction" prefHeight="46.0" prefWidth="134.0" style="-fx-background-color: #c6be4b; -fx-text-fill: #ffffff; -fx-background-radius: 50;" text="Back">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Button>
                  <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quitButtonOnAction" prefHeight="46.0" prefWidth="134.0" style="-fx-background-color: #c6be4b; -fx-text-fill: #ffffff; -fx-background-radius: 50;" text="Quit">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
